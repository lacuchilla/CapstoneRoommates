<%= form_for @share do |b| %>
  <fieldset>
    <legend><%= @legend %></legend>
    <%= b.label :name %>
    <%= b.text_field :name %>
    <%= b.label :total_amount %>
    <%= b.text_field :total_amount %>
    <%= b.label :due_date %>
    <%= b.date_field :due_date %>
  </fieldset>
  <%= b.submit("Save") %>
<% end%>
<%= link_to "View All Bills", shares_path, class: "btn btn-default" %>
<%= link_to "Back to home page", root_path, class: "btn btn-default" %>
