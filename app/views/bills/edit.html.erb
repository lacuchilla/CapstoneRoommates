<div class="row">
  <div class="col-lg-12">
    <%= form_for @bill, url: {action: "#{@url}"} do|b| %>
      <fieldset>
        <legend><%= @legend %></legend>
        <div class="form-group">
          <%= b.label :name %>
          <%= b.text_field :name %>
        </div>
        <div class="form-group">
          <%= b.label :total_amount %>
          <%= b.text_field :total_amount %>
        </div>
        <div class="form-group">
          <%= b.label :paid %>
          <%= b.check_box :paid %>
        </div>
        <div class="form-group">
          <%= b.label :bill_status %>
          <%= b.select :bill_status, options_for_select(@statuses.collect { |s| [s[0].humanize, s[0]] }, selected: @bill.bill_status), {} %>
        </div>
      </fieldset>
      <%= b.submit("Save") %>
    <% end%>
    <%= link_to "Back to home page", root_path, class: "btn btn-default" %>
  </div>
</div>
