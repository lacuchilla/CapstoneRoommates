
<h4>Bill Information</h4>
<div class="row">
  <div class="col-md-6">
    <table class="table table-striped">
      <tbody>
        <tr>
          <th>Name</th>
          <th>Amount</th>
          <th>Bill Due Date</th>
          <th>Paid?</th>
        </tr>
        <tr>
          <td><%= @specific_bill.name %></td>
          <td><%= @specific_bill.total_amount %></td>
          <td><%= @date.strftime("%m/%d/%Y") %></td>
          <td><%= @specific_bill.paid %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<h4>Created Shares</h4>
<div class="row">
  <div class="col-md-6">
    <table class="table table-striped">
      <tbody>
        <tr>
          <th>Person Responsible</th>
          <th>Amount</th>
          <th>Share Due Date</th>
          <th>Paid?</th>
        </tr>
        <tr>
          <% @specific_bill.shares.each do |share| %>
          <td><%= @specific_bill.name %></td>
          <td><%= @specific_bill.total_amount %></td>
          <td><%= @date.strftime("%m/%d/%Y") %></td>
          <td><%= @specific_bill.paid %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>




<%= form_for @share, url: {action: "create"} do |b| %>
  <fieldset>
    <legend><%= @legend %></legend>
    <%= b.label :due_date %>
    <%= b.date_field :due_date %>
    <%= b.label :share_amount %>
    <%= b.text_field :share_amount %>
    <%= b.label :person_responsible %>
    <%= b.collection_select(:user_id, User.all, :id, :username, prompt: "Select") %>
    <%= b.label :paid %>
    <%= b.check_box :paid %>
  </fieldset>
  <%= b.submit("Save") %>
<% end%>
<%= link_to "View All Shares", household_bill_shares_path, class: "btn btn-default" %>
<%= link_to "Back to home page", root_path, class: "btn btn-default" %>
