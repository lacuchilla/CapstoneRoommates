
<h4>Bill Information</h4>
<div class="row">
  <div class="col-md-6">
    <table class="table table-striped">
      <tbody>
        <tr>
          <th>Name</th>
          <th>Amount</th>
          <th>Bill Due Date</th>
          <th>Paid?</th>
        </tr>
        <tr>
          <td><%= @specific_bill.name %></td>
          <td><%= @specific_bill.total_amount %></td>
          <td><%= @date.strftime("%m/%d/%Y") %></td>
          <td><%= @specific_bill.paid %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<h4>Shares for <%= @specific_bill.name %></h4>
<div class="row">
  <div class="col-md-6">
    <table class="table table-striped">
      <tbody>
        <tr>
          <th>Person Responsible</th>
          <th>Amount</th>
          <th>Share Due Date</th>
          <th>Paid?</th>
        </tr>
        <tr>
          <% @shares.each do |share| %>
          <td><%= User.find(share.user_id).username %></td>
          <td><%= share.share_amount %></td>
          <td><%= share.due_date.strftime("%m/%d/%Y") %></td>
          <td><%= share.paid %></td>
          <td><%= share.payment_type %></td>
          <td><%= share.date_received %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<h4>Create a New Share</h4>
<div>
<%= form_for @share, url: {action: "create"} do |b| %>
  <fieldset>
    <legend><%= @legend %></legend>
    <div class="form-group">
      <%= b.label :due_date %>
      <%= b.date_field :due_date %>
    </div>
    <div class="form-group">
      <%= b.label :share_amount %>
      <%= b.text_field :share_amount %>
    </div>
    <div class="form-group">
      <%= b.label :person_responsible %>
      <%= b.collection_select(:user_id, User.all, :id, :username, prompt: "Select") %>
    </div>
    <div class="form-group">
      <%= b.label :paid %>
      <%= b.check_box :paid %>
    </div>
  </fieldset>
  <%= b.submit("Save") %>
<% end%>
<%= link_to "Back to home page", root_path, class: "btn btn-default" %>
