<div>
  <h3>Shares for <%= @specific_bill.name %></h3>
</div>
<div class="row">
  <div class="col-md-6">
    <table class="table table-striped">
      <tbody>
        <tr>
          <th>User</th>
          <th>Share Amount</th>
          <th>Paid?</th>
          <th>Share Details</th>
        </tr>
        <tr>
          <% @specific_bill.shares.each do |share| %>
            <td><%= share.user.username %></td>
            <td><%= number_to_currency(share.share_amount) %></td>
            <td><%= share.paid ? 'yes' : 'no' %></td>
            <td><%= link_to "Update Share", household_bill_share_share_status_path(@specific_household.id, @specific_bill.id, share.id), class: "btn btn-default"%></td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>
